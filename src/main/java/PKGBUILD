##package would be named "example-package"
package_java-springboot-mysql() {
    install=java-springboot-mysql.install
    cp -a "$rootdir/config/"* "$pkgdir"

    #copy resulting distributions from gradle build
    mv "$rootdir/../../../build/distributions/data-mysql-boot"*.tar "$pkgdir/usr/share/java-springboot-mysql/java-springboot-mysql.tar"
    tar xvf "$pkgdir/usr/share/java-springboot-mysql/*.tar" -C "$pkgdir/usr/share/java-springboot-mysql/"
    #mv "$pkgdir/usr/share/java-springboot-mysql/java-springboot-mysql"* "$pkgdir/usr/share/java-springboot-mysql/java-springboot-mysql/"

    ###app runs as it was previously configured otherwise
    #rm -rf "$pkgdir/usr/share/java-springboot-mysql/java-springboot-mysql"
    #chmod +x "$pkgdir/usr/share/java-springboot-mysql/start.sh"
}
